.header
  .header-top
    = link_to image_tag('logo.svg', alt:"mercari", class: 'header-top__title'), root_path
    = search_form_for(@q, url:items_search_path) do |f|
      = f.search_field :name_cont, placeholder: "キーワードから探す", class: "header-top__search"
      %button.icon-search{type:"submit"}
        = fa_icon 'search'
  .header-bottom
    .header-bottom--left
      %ul.pc-header-nav
        %li
          %h2
            = link_to "カテゴリーから探す", "/items",class: "pc-header-nav-root"
          %ul.pc-header-nav__parent-wrap
            %li.pc-header-nav__parent
              %h3
                = link_to "レディース", "/items" ,class: "header-bottom--left__nav-link-item"
              %ul.pc-header-nav__child-wrap
                %li.pc-header-nav__child
                  %h4
                    = link_to "トップスアウター","/items" ,class: "header-bottom--left__nav-link-item"
                  %ul.pc-header-nav__grand-child-wrap
                    %li.pc-header-nav__grand-child
                      = link_to "トップスカットソー", "/items" ,class: "header-bottom--left__nav-link-item"
                    %li.pc-header-nav__grand-child
                      = link_to "ブラウス", "/items" ,class: "header-bottom--left__nav-link-item"
                %li.pc-header-nav__child
                  %h4
                    = link_to "ジャケットアウター", "/items" ,class: "header-bottom--left__nav-link-item"
                  %ul.pc-header-nav__grand-child-wrap
                    %li.pc-header-nav__grand-child
                      = link_to "仮テキスト", "/items" ,class: "header-bottom--left__nav-link-item"
                    %li.pc-header-nav__grand-child
                      = link_to "仮テキスト", "/items" ,class: "header-bottom--left__nav-link-item"
        %li
          %h3.header-bottom--left
            = link_to "ブランドから探す", "/items" ,class: "header-bottom--left__nav-brand"
    .header-bottom--right
      %ul.bottom--right__nav
        - if user_signed_in?
          %li.header-bottom--right__nav-mypage
            = link_to user_mypage_path ,class: "header-bottom--right__nav-mypage-link" do
              .member-photo-dummy
                = image_tag("member_photo_noimage_thumb.png",alt: "プロフィール",class: "member-photo")
                .text-mypage
                  マイページ
          %li.header-bottom--right__nav-news
            = link_to "#" ,class: "header-bottom--right__nav-news-link" do
              = fa_icon 'bell-o', class: "bell"
              %span お知らせ
          %li.header-bottom--right__nav-todo
            = link_to "#" ,class: "header-bottom--right__nav-todo-link" do
              = fa_icon 'check',class: "check"
              %span やることリスト
        - else
          %li.header-bottom--right__nav-sign-in
            = link_to "ログイン", new_user_session_path ,class: "sign-in-tag"
          %li.header-bottom--right__nav-sign-up
            = link_to "新規会員登録", new_user_registration_path ,class: "sign-up-tag"
